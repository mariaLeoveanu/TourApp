<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tourapp.DetailsActivity">

    <ImageView
        android:id="@+id/iv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description"
        android:src="@drawable/muzeul_taranului_roman" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp20"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp30" />

    <TextView
        android:id="@+id/tv_address"
        style="@style/DetailsTextView"
        android:drawableLeft="@drawable/ic_address"
        android:drawableStart="@drawable/ic_address"
         />

    <TextView
        android:id="@+id/tv_phone"
        style="@style/DetailsTextView"
        android:drawableLeft="@drawable/ic_phone"
        android:drawableStart="@drawable/ic_phone" />

    <TextView
        android:id="@+id/tv_timetable"
        style="@style/DetailsTextView"
        android:drawableLeft="@drawable/ic_hours"
        android:drawableStart="@drawable/ic_hours"
       />


</LinearLayout>
